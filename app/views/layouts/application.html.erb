  <!-- Put this script tag to the place, where the Share button will be -->
 
  <hr/>
  </div>
  <br/>
  
  <table width="100%">
    <tr>
      <td  width="100%"><div style="text-align: center;margin-left: 30%">&copy; 2011-2011 <a href="http://#{ApplicationController.domain}">http://<%= ApplicationController.domain%> </a></div></td>
      <td>
        <form name="search" method="get" action="/search/" style="width: 320px">
        <span><input type="search" name="text" size="20" value="" maxlength="80" placeholder="Поиск" results="10" style="width:90%; font-size:85%"/></span>
        </form>
      </td>
    </tr>
  </table>
  
</noindex>

</body>
</html>
